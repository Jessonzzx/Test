<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TowardAgarioStepOne.MainPage">

  <StackLayout>
    <!-- Add padding and set horizontal options to center the content -->
    <Label x:Name="fpsLabel"
           Text="FPS: --"
           HorizontalOptions="Center" />

    <Label x:Name="centerLabel"
           Text="Center: --,--"
           HorizontalOptions="Center" />

    <Label x:Name="directionLabel"
           Text="Direction: --,--"
           HorizontalOptions="Center" />

    <!-- GraphicsView for the game rendering -->
    <GraphicsView x:Name="PlaySurface"
                  VerticalOptions="FillAndExpand"
                  BackgroundColor="Blue"
                  HeightRequest="800"
                  WidthRequest="800" />
</StackLayout>

</ContentPage>

